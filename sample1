#include "Arduino.h"
//command + A -> command kで綺麗になる
/*
Arduino学習用プログラム
 if,else,switch case,等
 mode1 LED点灯
 mode2 LEDがボワボワ点灯
 mode3 LEDが可変抵抗の値によって変化
 */

const int  switch1 = 7;
const int  switch2 = 8;
const int  switch3 = 9;

const int LED_pin = 10;
const int potentiometer = 14;
int switch_mode = 0;
int val = 0;
char mode_status;



void setup() {
  pinMode(switch1,INPUT_PULLUP);
  pinMode(switch2,INPUT_PULLUP);
  pinMode(switch3,INPUT_PULLUP);
  Serial.begin(9600);
  analogWrite(LED_pin, 0);

}
//===========================================================================
void mode1(){
  digitalWrite(LED_pin,HIGH);
  mode_status = '1'; 
}

void mode2(){
   mode_status = '2';
  for(float i = 0; i < 255; i += 10){
    analogWrite(LED_pin,i);
    delay(30);
  }

  for(float j = 256; j < 0; j -= 10){
    analogWrite(LED_pin,j);
    delay(30);
  }
}

void mode3(){
   mode_status = '3';
  analogWrite(LED_pin,val);
}

//=======================================================================
void loop() {
  val = analogRead(potentiometer);
  val = val /3 ;
  /*
  if(digitalRead(switch1) == HIGH){
   switch_mode = 1;
   }
   else if(digitalRead(switch2) == HIGH){
   switch_mode = 2;
   }
   else if(digitalRead(switch3) == HIGH){
   switch_mode = 3;
   }
   */

  /*
  switch (switch_mode)
   {
   case 1:
   mode1();
   break;
   
   case 2:
   mode2();
   break;
   
   case 3:
   mode3();
   break;
   
   }
   */

  //Serial.println("potentiometer" + val);
  //Serial.println("mode" + switch_mode);

  if(Serial.available()  > 0){
    int switch_mode = Serial.read();
    switch(switch_mode){
    case 'A':
      mode1();
      break;

    case 'B':
      mode2();
      break;

    case 'C':
      mode3();
      break;

    }
  }
  Serial.println( mode_status);
  delay(100);

}











